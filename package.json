{
    "name": "cyberpunk2077",
    "version": "0.7.0-gonk",
    "description": "A rebuild of the original cyberpunk vortex extension with the aim to support more mod types and fix common issues",
    "main": "./dist/index.js",
    "scripts": {
        "prepare": "husky install",
        "clean": "rm *.7z && rm ./dist/*",
        "clear-caches": "jest --clearCache",
        "lint": "eslint -c .eslintrc.build.json src test",
        "lint-fix": "eslint -c .eslintrc.build.json --fix src test && prettier --write",
        "pre-commit": "lint-staged",
        "test": "jest --no-cache --verbose=true --silent=false",
        "test-clean": "jest --clearCache && npm run test",
        "test-debug": "jest --clearCache && node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --verbose=true --silent=false --no-cache",
        "repl": "ts-node -r tsconfig-paths/register",
        "postinstall": "patch-package",
        "webpack": "node ./node_modules/webpack/bin/webpack --config webpack.config.js --color",
        "build": "npm run webpack && extractInfo && copyfiles -f ./gameart.png ./gameicon.png ./LICENSE ./SaveEditor.png ./dist/",
        "pack": "npm run build && powershell.exe ./script/package.ps1",
        "pack-dev": "npm run build && powershell.exe ./script/package.ps1 -Dev",
        "pack-linux": "npm run build && bash ./script/package.sh",
        "pack-dev-linux": "npm run build && bash ./script/package.sh -dev"
    },
    "author": "KellieAtTheLab",
    "contributors": [
        "Ellie (http://üçÜüí¶üçëüò©.ws//)",
        "Auska (https://github.com/effs)",
        "Bladehawke (https://github.com/Bladehawke)",
        "ThunderGod (https://github.com/thundergod97)"
    ],
    "license": "GPL-3.0",
    "devDependencies": {
        "@jest/types": "^27.5.1",
        "@types/jest": "^27.4.1",
        "@types/jest-expect-message": "^1.0.3",
        "@types/mock-fs": "^4.13.1",
        "@types/node": "^17.0.21",
        "@types/react": "^17.0.0",
        "@types/react-bootstrap": "^0.32.20",
        "@types/redux": "^3.6.0",
        "@types/redux-thunk": "^2.1.0",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "bluebird": "^3.7.2",
        "copyfiles": "^2.4.1",
        "eslint": "^7.32.0",
        "eslint-config-airbnb-typescript": "^16.1.1",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "husky": "^7.0.0",
        "i18next": "^21.0.0",
        "jest": "^27.5.1",
        "jest-expect-message": "^1.0.2",
        "jest-mock-extended": "^2.0.4",
        "lint-staged": "^12.3.5",
        "mock-fs": "5.1.2",
        "prettier": "^2.5.1",
        "prettier-eslint": "^13.0.0",
        "react": "^17.0.2",
        "react-bootstrap": "^2.2.1",
        "react-dom": "^17.0.2",
        "ts-jest": "^27.1.3",
        "ts-loader": "^6.0.4",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^3.13.0",
        "typescript": "^4.5.0",
        "vortex-api": "github:Nexus-Mods/vortex-api",
        "webpack": "^4.35.0",
        "webpack-cli": "^4.9.2"
    },
    "dependencies": {
        "fp-ts": "^2.12.1",
        "key-tree": "^1.0.3",
        "patch-package": "^6.4.7"
    }
}
